<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # If requesting the site root, go to public/index.php
    RewriteRule ^$ public/index.php [L]

    # If the request is already for /public, let it pass through
    RewriteCond %{REQUEST_URI} ^/public/ [NC]
    RewriteRule ^ - [L]

    # Let existing files pass through
    RewriteCond %{REQUEST_FILENAME} -f
    RewriteRule ^ - [L]

    # Send everything else to /public
    RewriteRule ^(.*)$ public/$1 [L,QSA]
</IfModule>
